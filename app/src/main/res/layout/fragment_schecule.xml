<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">

    <!-- Scrollable Content -->
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Header Section -->
                <LinearLayout
                    android:id="@+id/header_section"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="32dp"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Scheduling"
                            android:fontFamily="@font/poppins_semibold"
                            android:textColor="@color/text_color"
                            android:textSize="24sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="View and manage bookings"
                            android:fontFamily="@font/poppins_regular"
                            android:textColor="@color/text_gray_color"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/calendar_icon_card"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:backgroundTint="@color/white"
                        app:cardCornerRadius="24dp"
                        app:cardElevation="2dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_calendar"
                            app:tint="@color/primary_color" />
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>

                <!-- Calendar Container -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/calendarContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="32dp"
                    android:backgroundTint="@color/white"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <!-- Month/Year Header -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:gravity="center_vertical">

                            <!-- Previous Month Button -->
                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:backgroundTint="@color/background_color"
                                app:cardCornerRadius="20dp"
                                app:cardElevation="0dp">

                                <ImageButton
                                    android:id="@+id/btnPrevMonth"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="?attr/selectableItemBackgroundBorderless"
                                    android:contentDescription="Previous Month"
                                    android:src="@drawable/chevron_left"
                                    android:paddingLeft="7dp"
                                    app:tint="@color/text_gray_color" />
                            </com.google.android.material.card.MaterialCardView>

                            <!-- Month and Year Text -->
                            <TextView
                                android:id="@+id/tvMonthYear"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/poppins_semibold"
                                android:gravity="center"
                                android:textColor="@color/text_color"
                                android:textSize="18sp"
                                tools:text="July 2025" />

                            <!-- Next Month Button -->
                            <com.google.android.material.card.MaterialCardView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:backgroundTint="@color/background_color"
                                app:cardCornerRadius="20dp"
                                app:cardElevation="0dp">

                                <ImageButton
                                    android:id="@+id/btnNextMonth"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="?attr/selectableItemBackgroundBorderless"
                                    android:contentDescription="Next Month"
                                    android:src="@drawable/chevron_right"
                                    app:tint="@color/text_gray_color" />
                            </com.google.android.material.card.MaterialCardView>
                        </LinearLayout>

                        <!-- Days of Week Header -->
                        <LinearLayout
                            android:id="@+id/daysOfWeekContainer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingBottom="12dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/poppins_medium"
                                android:gravity="center"
                                android:text="MON"
                                android:textColor="@color/text_gray_color"
                                android:textSize="12sp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/poppins_medium"
                                android:gravity="center"
                                android:text="TUE"
                                android:textColor="@color/text_gray_color"
                                android:textSize="12sp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/poppins_medium"
                                android:gravity="center"
                                android:text="WED"
                                android:textColor="@color/text_gray_color"
                                android:textSize="12sp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/poppins_medium"
                                android:gravity="center"
                                android:text="THU"
                                android:textColor="@color/text_gray_color"
                                android:textSize="12sp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/poppins_medium"
                                android:gravity="center"
                                android:text="FRI"
                                android:textColor="@color/text_gray_color"
                                android:textSize="12sp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/poppins_medium"
                                android:gravity="center"
                                android:text="SAT"
                                android:textColor="@color/text_gray_color"
                                android:textSize="12sp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/poppins_medium"
                                android:gravity="center"
                                android:text="SUN"
                                android:textColor="@color/text_gray_color"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <!-- Calendar View -->
                        <com.kizitonwose.calendar.view.CalendarView
                            android:id="@+id/calendarView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cv_dayViewResource="@layout/calendar_day_layout"
                            app:cv_orientation="horizontal"
                            app:cv_outDateStyle="endOfRow"
                            app:cv_scrollPaged="true" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Upcoming Events Section -->
                <LinearLayout
                    android:id="@+id/eventsHeaderContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvUpcomingEvents"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_semibold"
                            android:text="Upcoming Events"
                            android:textColor="@color/text_color"
                            android:textSize="20sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_regular"
                            android:text="All scheduled activities"
                            android:textColor="@color/text_gray_color"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/btnSortEvents"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:backgroundTint="@color/white"
                        android:visibility="gone"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="2dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center"
                            android:contentDescription="Sort Events"
                            android:src="@drawable/ic_plus"
                            app:tint="@color/primary_color" />
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>

                <!-- Events RecyclerView -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvEvents"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:nestedScrollingEnabled="false"
                    tools:listitem="@layout/item_event" />

                    <LinearLayout
                        android:id="@+id/notFoundCard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="150dp"
                            android:layout_height="75dp"
                            android:layout_marginBottom="24dp"
                            android:contentDescription="Calendar"
                            android:src="@drawable/il_calendar" />

                        <TextView
                            android:id="@+id/tvError"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:fontFamily="@font/poppins_semibold"
                            android:text="No Events Found"
                            android:textColor="@color/text_color"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tvErrorLoad"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_regular"
                            android:gravity="center"
                            android:lineSpacingExtra="2dp"
                            android:text="No events are scheduled for this date. You can reserve this slot for your event or activity!"
                            android:textColor="@color/text_gray_color"
                            android:textSize="14sp" />
                    </LinearLayout>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:elevation="2dp">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_arrow_back"
            android:layout_marginEnd="16dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:padding="4dp"
            app:tint="@color/text_color"
            android:contentDescription="Kembali" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Foto Profil"
            android:textSize="18sp"
            android:textColor="@color/text_color"
            android:fontFamily="@font/poppins_semibold" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/headerLayout"
        android:background="@color/background_color"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center_horizontal">

            <!-- Preview -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="180dp"
                android:layout_height="180dp"
                app:cardCornerRadius="90dp"
                app:cardElevation="4dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="24dp">

                <ImageView
                    android:id="@+id/ivProfileImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_profile" />

                <ImageView
                    android:id="@+id/ivAddPhotoOverlay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#80000000"
                    android:padding="48dp"
                    android:src="@drawable/ic_photo"
                    android:visibility="gone"
                    app:tint="@color/white" />
            </com.google.android.material.card.MaterialCardView>

            <!-- Pilihan Foto -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                android:backgroundTint="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ubah Foto Profil"
                        android:textSize="16sp"
                        android:textColor="@color/text_color"
                        android:fontFamily="@font/poppins_semibold"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pilih foto yang jelas agar mudah dikenali"
                        android:textSize="14sp"
                        android:textColor="@color/text_gray_color"
                        android:fontFamily="@font/poppins_regular"
                        android:layout_marginBottom="24dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnTakePhoto"
                            android:layout_width="0dp"
                            android:layout_height="56dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            android:text="Kamera"
                            android:textColor="@color/text_color"
                            android:textSize="14sp"
                            app:backgroundTint="@color/white"
                            app:strokeColor="@color/text_gray_color"
                            app:strokeWidth="1dp"
                            app:cornerRadius="12dp"
                            app:icon="@drawable/ic_photo"
                            app:iconTint="@color/primary_color"
                            app:iconGravity="textStart"
                            app:iconPadding="8dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnGallery"
                            android:layout_width="0dp"
                            android:layout_height="56dp"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:text="Galeri"
                            android:textColor="@color/text_color"
                            android:textSize="14sp"
                            app:backgroundTint="@color/white"
                            app:strokeColor="@color/text_gray_color"
                            app:strokeWidth="1dp"
                            app:cornerRadius="12dp"
                            app:icon="@drawable/ic_image"
                            app:iconTint="@color/primary_color"
                            app:iconGravity="textStart"
                            app:iconPadding="8dp" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Tombol -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRemovePhoto"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="16dp"
                android:text="Hapus Foto"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:backgroundTint="@color/text_gray_color"
                android:fontFamily="@font/poppins_semibold"
                app:cornerRadius="12dp"
                app:icon="@drawable/ic_delete"
                app:iconTint="@color/white"
                app:iconGravity="textStart"
                app:iconPadding="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSavePhoto"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Simpan Foto"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:backgroundTint="@color/primary_color"
                android:fontFamily="@font/poppins_semibold"
                app:cornerRadius="12dp"
                app:icon="@drawable/ic_check"
                app:iconTint="@color/white"
                app:iconGravity="textStart"
                app:iconPadding="8dp" />
        </LinearLayout>
    </ScrollView>

    <!-- Loading -->
    <FrameLayout
        android:id="@+id/loadingOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dark_overlay"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone"
        android:elevation="10dp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp">

            <ProgressBar
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:indeterminateTint="@color/primary_color" />
        </com.google.android.material.card.MaterialCardView>
    </FrameLayout>
</RelativeLayout>
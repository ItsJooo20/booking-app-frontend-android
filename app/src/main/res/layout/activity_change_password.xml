<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:elevation="2dp">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_arrow_back"
            android:layout_marginEnd="16dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:padding="4dp"
            app:tint="@color/text_color"
            android:contentDescription="Kembali" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Ubah Kata Sandi"
            android:textSize="18sp"
            android:textColor="@color/text_color"
            android:fontFamily="@font/poppins_semibold" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/headerLayout"
        android:background="@color/background_color"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp"
            android:orientation="vertical">

            <!-- Info Keamanan -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/form_background"
                android:padding="20dp"
                android:elevation="2dp"
                android:layout_marginBottom="24dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_lock"
                    android:layout_marginEnd="12dp"
                    app:tint="@color/primary_color" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pembaruan Keamanan"
                        android:textSize="14sp"
                        android:textColor="@color/text_color"
                        android:fontFamily="@font/poppins_semibold"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gunakan kata sandi kuat untuk menjaga keamanan akun Anda"
                        android:textSize="12sp"
                        android:textColor="@color/text_gray_color"
                        android:fontFamily="@font/poppins_regular" />
                </LinearLayout>
            </LinearLayout>

            <!-- Form Ubah -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/form_background"
                android:elevation="2dp"
                android:padding="24dp"
                android:layout_marginBottom="24dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Perbarui Kata Sandi Anda"
                    android:textSize="16sp"
                    android:textColor="@color/text_color"
                    android:fontFamily="@font/poppins_semibold"
                    android:layout_marginBottom="16dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilCurrentPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Kata Sandi Saat Ini"
                    android:layout_marginBottom="16dp"
                    app:boxStrokeColor="@color/primary_color"
                    app:hintTextColor="@color/text_gray_color"
                    app:startIconDrawable="@drawable/ic_lock"
                    app:startIconTint="@color/text_gray_color"
                    app:endIconMode="password_toggle"
                    app:endIconTint="@color/text_gray_color"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etCurrentPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:textSize="16sp"
                        android:fontFamily="@font/poppins_regular"
                        android:textColor="@color/text_color" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilNewPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Kata Sandi Baru"
                    android:layout_marginBottom="16dp"
                    app:boxStrokeColor="@color/primary_color"
                    app:hintTextColor="@color/text_gray_color"
                    app:startIconDrawable="@drawable/ic_lock"
                    app:startIconTint="@color/text_gray_color"
                    app:endIconMode="password_toggle"
                    app:endIconTint="@color/text_gray_color"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etNewPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:textSize="16sp"
                        android:fontFamily="@font/poppins_regular"
                        android:textColor="@color/text_color" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilConfirmPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Konfirmasi Kata Sandi Baru"
                    android:layout_marginBottom="16dp"
                    app:boxStrokeColor="@color/primary_color"
                    app:hintTextColor="@color/text_gray_color"
                    app:startIconDrawable="@drawable/ic_lock"
                    app:startIconTint="@color/text_gray_color"
                    app:endIconMode="password_toggle"
                    app:endIconTint="@color/text_gray_color"
                    app:boxCornerRadiusTopStart="12dp"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:boxCornerRadiusBottomEnd="12dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etConfirmPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:textSize="16sp"
                        android:fontFamily="@font/poppins_regular"
                        android:textColor="@color/text_color" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <!-- Persyaratan -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/form_background"
                android:elevation="2dp"
                android:padding="20dp"
                android:layout_marginBottom="32dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Persyaratan Kata Sandi:"
                    android:textSize="14sp"
                    android:textColor="@color/text_color"
                    android:fontFamily="@font/poppins_semibold"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Minimal 8 karakter\n• Mengandung huruf besar dan kecil\n• Mengandung minimal satu angka\n• Mengandung minimal satu karakter spesial"
                    android:textSize="12sp"
                    android:textColor="@color/text_gray_color"
                    android:fontFamily="@font/poppins_regular"
                    android:lineSpacingExtra="2dp" />
            </LinearLayout>

            <!-- Tombol -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnUpdatePassword"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Perbarui Kata Sandi"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    app:backgroundTint="@color/primary_color"
                    android:fontFamily="@font/poppins_semibold"
                    app:cornerRadius="12dp"
                    android:elevation="4dp"
                    app:rippleColor="@color/primary_dark_color"
                    android:layout_marginBottom="12dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCancel"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Batal"
                    android:textColor="@color/text_gray_color"
                    android:textSize="16sp"
                    app:backgroundTint="@color/white"
                    app:strokeColor="@color/text_gray_color"
                    android:fontFamily="@font/poppins_semibold"
                    app:strokeWidth="1dp"
                    app:cornerRadius="12dp"
                    android:elevation="2dp"
                    app:rippleColor="@color/accent_color" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Loading -->
    <FrameLayout
        android:id="@+id/loadingOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dark_overlay"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true"
        android:elevation="10dp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp">

            <ProgressBar
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:indeterminateTint="@color/primary_color" />
        </com.google.android.material.card.MaterialCardView>
    </FrameLayout>
</RelativeLayout>
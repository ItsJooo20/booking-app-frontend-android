<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".ui.fragment.DashboardFragment">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nested_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_color"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/extended_fab"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Sapaan User -->
            <LinearLayout
                android:id="@+id/greeting_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="32dp"
                android:gravity="center_vertical">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/materialCardView"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    app:cardCornerRadius="28dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/white">

                    <ImageView
                        android:id="@+id/imageViewProfile"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_profile" />
                </com.google.android.material.card.MaterialCardView>

                <LinearLayout
                    android:id="@+id/greeting_name_section"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Selamat datang,"
                        android:fontFamily="@font/poppins_regular"
                        android:textColor="@color/text_gray_color"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/greeting_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Michaelfito!"
                        android:fontFamily="@font/poppins_semibold"
                        android:textColor="@color/text_color"
                        android:textSize="20sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Pencarian -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/search_container"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="32dp"
                android:backgroundTint="@color/white"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="12dp"
                        android:contentDescription="Cari"
                        android:src="@drawable/ic_search"
                        app:tint="@color/text_gray_color" />

                    <EditText
                        android:id="@+id/search_input"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:hint="Cari fasilitas"
                        android:imeOptions="actionSearch"
                        android:fontFamily="@font/poppins_regular"
                        android:inputType="text"
                        android:textSize="16sp"
                        android:textColor="@color/text_color"
                        android:textColorHint="@color/text_gray_color"
                        android:paddingVertical="8dp" />

                    <ImageButton
                        android:id="@+id/btn_filter"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="8dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="Filter"
                        android:src="@drawable/ic_plus"
                        android:visibility="gone"
                        app:tint="@color/text_gray_color" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Judul Kategori -->
            <TextView
                android:id="@+id/category_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Kategori"
                android:fontFamily="@font/poppins_semibold"
                android:textColor="@color/text_color"
                android:textSize="18sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/categories_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:nestedScrollingEnabled="false"
                android:overScrollMode="never"
                tools:itemCount="2"
                tools:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                tools:listitem="@layout/item_category"
                tools:spanCount="1" />

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/text_gray_color"
                android:alpha="0.3" />

            <!-- Info Booking Baru -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="75dp"
                    android:layout_marginBottom="16dp"
                    android:contentDescription="Kalender"
                    android:src="@drawable/il_calendar" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Pemesanan Baru"
                    android:textColor="@color/text_color"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="center"
                    android:text="Pinjam ruang atau item untuk rapat, acara, atau aktivitas lainnya. Cek ketersediaan dan kirim permintaan Anda â€” cepat dan tanpa ribet."
                    android:textColor="@color/text_gray_color"
                    android:textSize="12sp"
                    android:lineSpacingExtra="2dp" />
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/extended_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="24dp"
        android:backgroundTint="@color/primary_color"
        android:contentDescription="Pemesanan Baru"
        android:text=""
        android:fontFamily="@font/poppins_semibold"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:icon="@drawable/ic_add"
        app:iconSize="20dp"
        app:iconTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:rippleColor="@color/primary_dark_color" />

</androidx.constraintlayout.widget.ConstraintLayout>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MyAppBooking" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:statusBarColor">@color/background_color</item>
        <!-- Make status bar icons dark (for light backgrounds) -->
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="NoRippleBottomNavigationStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemBackground">@android:color/transparent</item>
        <item name="itemRippleColor">@android:color/transparent</item>
        <item name="itemIconTint">@color/primary_dark_color</item>
        <item name="itemTextColor">@color/primary_dark_color</item>
        <!--        <item name="itemTextAppearanceActive">@style/TextAppearance.BottomNavigation.Active</item>-->
        <!--        <item name="itemTextAppearanceInactive">@style/TextAppearance.BottomNavigation.Inactive</item>-->
    </style>

    <style name="TextAppearance.BottomNavigation.Active" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/primary_color</item>
    </style>

    <style name="TextAppearance.BottomNavigation.Inactive" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/text_gray_color</item>
    </style>

    <style name="MyProgressBar" parent="Theme.AppCompat">
        <item name="colorAccent">@color/white</item>
    </style>

    <!-- Light Mode (res/values/styles.xml) -->
    <style name="SpinnerTimePickerTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:timePickerStyle">@style/SpinnerTimePicker</item>
        <!-- Warna untuk Light Mode -->
        <item name="colorPrimary">@color/primary_color</item>  <!-- Warna tombol OK/Cancel -->
        <item name="colorAccent">@color/accent_color</item>    <!-- Warna seleksi -->
        <item name="android:textColorPrimary">@color/text_color</item>  <!-- Warna angka -->
        <item name="android:colorBackground">@color/white</item>  <!-- Background spinner -->
    </style>

    <style name="SpinnerTimePicker" parent="android:Widget.Material.TimePicker">
        <item name="android:timePickerMode">spinner</item>
    </style>

    <style name="Theme.MyAppBooking" parent="Base.Theme.MyAppBooking" />
</resources>